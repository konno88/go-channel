<div class="container">
  <ul class="message">
    <% @article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
    <% end %>
  </ul>
  <%= form_with(model: @article, url: article_path(@article), method: 'put', local: true) do |f| %>
    <div class="form">
        <div>
        <%= f.label :title, 'タイトル', class: 'form_title' %>
        </div>
        <div>
        <%= f.text_field :title, class: 'form_title_text' %>
        </div>
        <div>
        <%= f.label :content, '内容', class: 'form_content' %>
        </div>
        <div>
        <%= f.text_area :content, class: 'form_content_text' %>
        </div>
        <%= f.submit '保存', class: 'submit_btn' %>
    </div>
  <% end %>
</div>